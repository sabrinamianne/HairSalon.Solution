@{
  Layout = "_Layout";
}
<div id="main">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-12 col-md-6 col-lg-8" id="firstcol">
        <h1>Add a client to @Model.GetName()</h1>
          <form class="form" action='/stylists/@Model.GetId()/clients' method='post'><h3>
          <input id='stylistId' name='stylistId' type='hidden' value='@Model.GetId()'>
          <label for='clientName'>Client Name : </label><br>
          <input id='clientName' name='clientName' type='text' placeholder="David Jones" required><br><br>
          <label for='appDate'>Appointment Date : </label><br>
          <input id='appDate' name='appDate' type="date"><br><br><br></h3>
          <h3><button class="second" type='submit'>Add a Client</button></h3><br>
        </form>
      </div>
      <div class="col-6 col-lg-4" id="secondcol">
        <h2>Numbers of Clients:  @Model.GetCountClients()</h2><br>
        <a href="/stylists">List of our Stylists</a><br>
        <a href="/">Back home</a>
      </div>
    </div>
  </div>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-12r">
        </div>
      </div>
    </div>
  </div>
</div>
